<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @location.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @location.longitude %>
</p>

<p>
  <strong>Map url:</strong>
  <%= @location.map_url %>
</p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>

<% content_for :sidebar do %>
  <h3>Upcoming Meetings:</h3><br>
  <table id="table-design">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Location</th>
      </tr>
    </thead>

    <tbody>
      <% @location.meetings.where(['start_time > ?', DateTime.now]).order(:start_time).limit(5).each do |meeting| %>
        <tr>
          <td><%= meeting.name %></td>
          <td><%= meeting.start_time.strftime("%A, %B %d, %Y at %l:%M%p") %></td>
          <td><%= meeting.end_time.strftime("%A, %B %d, %Y at %l:%M%p") %></td>
          <td><%= meeting.location.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
